      <!-- {t("label.tagCard")} -->
      <!-- ASD -->
      <h3>Tags</h3>
    </div>
  </div>
  <div class="flex max-h-[300px] w-full flex-wrap gap-2.5 ">
    {
      tagsWithCounts.map(({ tag, count }) => (
        <a
          href={`/blog/tag/${tag}`}
          class="join flex items-center overflow-hidden transition-all duration-150 ease-out rounded-lg bg-neutral-100/60 hover:bg-neutral-100 dark:hover:bg-neutral-900/80 shadow-lg backdrop-blur-2xl dark:bg-neutral-900/40"
        >
          <p class="btn btn-xs join-item px-2 py-1 text-base">{tag}</p>
          <span class="pb-1 text-base font-extrabold text-blue-500 dark:text-blue-400">
